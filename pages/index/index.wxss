/**index.wxss**/
@import "./index.skeleton.wxss";

.allContent {
  height: 100%;
}
.vessel-text {
  padding: 2%;
}
.classImage {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
.image-vessel {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.contet-text {
  font-size: 30rpx;
  background-image: linear-gradient(88deg,#3a3832,#fcc687);
  -webkit-background-clip: text;
  color: transparent;
}
.image-flex {
  width: 160rpx;
  height: 160rpx;
  border-radius: 10%;
}
.poen {
  text-align: center;
  margin-top: -40rpx;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}